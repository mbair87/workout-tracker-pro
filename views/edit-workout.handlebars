<article class="edit-workout">
    <h2 class="h-text">Edit Workout</h2>
    <form class="edit-workout-form">
        <div class="form-group title-form">
            <label class="label-heads" for="post-title">Workout Title:</label>
            <input type="text" class="form-control" autocomplete="off" name="workout-title" value="{{workout.workout_title}}">
        </div>
        <div class="form-group length-form">
            <p class="label-heads">Workout Duration:</p>
            <select name="length" id="duration">
                <option>{{workout.workout_length}}</option>
                <option> ---Choose Minutes--- </option>
                <option> 15 </option>
                <option> 30 </option>
                <option> 45 </option>
                <option> 60 </option>
                <option> 75 </option>
                <option> 90 </option>
                <option> 105 </option>
                <option> 120 </option>
                <option> 135 </option>
                <option> 150 </option>
                <option> 165 </option>
                <option> 180+ </option>
            </select>
        </div>
        <div class="form-group text-form">
            <label class="label-heads" for="workout-content">Workout Description:</label>
            <textarea class="workout-text" name="workout-body"
                id="workout-content">{{workout.workout_description}}</textarea>
        </div>
        <button type="submit" class="log-btn">Update Workout</button>
    </form>
    <button type="button" class="log-btn" id="delete-workout-btn">Delete Workout</button>
</article>

<form class="comment-form">
    <h3 class="comment-head h-text">Add a Comment</h3>
    <div class="mt-2">
        <textarea name="comment-body" class="comment-text"></textarea>
    </div>
    <div>
        <button type="submit" class="log-btn">Add Comment</button>
    </div>
</form>

{{> comments workout.comments}}

<script src="/javascript/edit-workout.js"></script>
<script src="/javascript/delete-workout.js"></script>
<script src="/javascript/comment.js"></script>