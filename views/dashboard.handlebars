<section class="add-workout">
    <h2 class="pt-3 h-text text-center">Your Workouts</h2>
    <h3 class="pt-1 h-text"><u>Add A New Workout</u></h3>

    <form class="new-workout-form">
        <div class="form-group title-form">
            <label class="label-heads" for="workout-title">Title of Workout:</label>
            <input type="text" class="form-control" id="workout-name" name="workout-title" placeholder="Title">
        </div>
        <div class="form-group length-form">
                <p class="label-heads">Workout Duration:</p> 
                <select name="length" id="duration">
                    <option> ---Choose Minutes--- </option>
                    <option> 15 </option>
                    <option> 30 </option>
                    <option> 45 </option>
                    <option> 60 </option>
                    <option> 75 </option>
                    <option> 90 </option>
                    <option> 105 </option>
                    <option> 120 </option>
                    <option> 135 </option>
                    <option> 150 </option>
                    <option> 165 </option>
                    <option> 180+ </option>
                </select>
        </div>
        <div class="form-group text-form">
            <label class="label-heads" for="workout-content">Workout Description:</label>
            <textarea class="workout-text" name="workout-body"></textarea>
        </div>
        <div>
            <button class="log-btn" type="submit">Add Workout</button>
        </div>
    </form>
</section>

{{#if workouts.length}}
<section class="add-workout">
    <h3 class="user-post-head mt-2 h-text"><u>Your Workout Posts</u></h3>
    <ol class="container user-posts">
        {{#each workouts as |workout|}}
        <li class="col-12">
            {{> workout-info workout}}
            <div class="edit-btn">
                <a href="/dashboard/edit/{{workout.id}}" class="edit-link">Edit Workout</a>
            </div>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}

<script src="/javascript/add-workout.js"></script>