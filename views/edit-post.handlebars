<article>
    <h2 class="h-text">Edit Post</h2>
    <form class="edit-post-form">
        <div class="form-group title-form">
            <label class="label-heads" for="post-title">Post Title:</label>
            <input type="text" class="form-control" name="post-title" value="{{post.title}}">
        </div>
        <div class="form-group text-form">
            <label class="label-heads" for="post-content">Post Content:</label>
            <textarea class="post-text" name="post-body">{{post.post_text}}</textarea>
        </div>
        <button type="submit" class="log-btn">Update post</button>
    </form>
    <button type="button" class="log-btn delete-post-btn">Delete post</button>
</article>

<form class="comment-form">
    <h3 class="comment-head h-text">Add a Comment</h3>
    <div class="mt-2">
        <textarea name="comment-body" class="comment-text"></textarea>
    </div>
    <div>
        <button type="submit" class="log-btn">Add Comment</button>
    </div>
</form>

{{> comments post.comments}}

<script src="/javascript/edit-workout.js"></script>
<script src="/javascript/delete-workout.js"></script>
<script src="/javascript/comment.js"></script>